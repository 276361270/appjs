#!/usr/bin/env bash -

# hop out of the symlink and prepare to
# launch the bundled version of node

dir=`dirname "$0"`
target=`readlink "$0"`
target_dir=`dirname "$target"`
appjs_path="$dir/$target_dir/.."
node_path="$appjs_path/node_modules/node-osx/bin/node"
node_args="--harmony_proxies --harmony_collections --harmony_scoping"

# launch the 32bit node with the incoming args
$node_path $node_args $appjs_path/bin/app.js $@
